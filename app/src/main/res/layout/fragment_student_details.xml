<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.StudentDetails">

    <!-- TODO: Update blank fragment layout -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/mname"
            android:layout_width="132dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:autofillHints="true"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/middle_name"
            android:inputType="textMultiLine"
            app:layout_constraintStart_toEndOf="@+id/fname"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/lname"
            android:layout_width="127dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:autofillHints="true"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/last_name"
            android:inputType="textMultiLine"
            app:layout_constraintStart_toEndOf="@+id/mname"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/fname"
            android:layout_width="136dp"
            android:layout_height="60dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:autofillHints="true"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/first_name"
            android:inputType="textMultiLine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/idnum"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:autofillHints="@string/id_number"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/id_number"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toStartOf="@+id/reg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fname" />

        <EditText
            android:id="@+id/reg"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:autofillHints="@string/registration_number"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/registration_number"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.893"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mname" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/gender"
            app:layout_constraintEnd_toStartOf="@+id/gender"
            app:layout_constraintHorizontal_bias="0.459"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idnum" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="60dp"
            android:text="course"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="68dp"
            android:text="department"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toStartOf="@+id/department"
            app:layout_constraintHorizontal_bias="0.625"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="77dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:text="school"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="419dp" />

        <RadioGroup
            android:id="@+id/gender"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginStart="154dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="134dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="@string/male" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="@string/female" />
        </RadioGroup>

        <Spinner
            android:id="@+id/courses"
            android:layout_width="222dp"
            android:layout_height="48dp"
            android:autofillHints="Courses"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.29"
            app:layoutDescription="@array/courses"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/gender" />

        <Spinner
            android:id="@+id/department"
            android:layout_width="222dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:autofillHints="Courses"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.29"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/courses" />

        <Spinner
            android:id="@+id/department2"
            android:layout_width="222dp"
            android:layout_height="48dp"
            android:layout_marginTop="56dp"
            android:autofillHints="Courses"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.135"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/department" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/department2"
            app:layout_constraintVertical_bias="0.15"
            tools:layout_editor_absoluteX="72dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="84dp"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="512dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>